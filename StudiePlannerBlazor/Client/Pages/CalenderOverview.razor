@page "/calenderoverview"
@inherits CalenderOverviewBase

<h1 class="page-title">All tasks</h1>

@if (Tasks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Tasks)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Name</td>
                    <td>@task.StartDate.ToShortDateString()</td>
                    <td>@task.EndDate.ToShortDateString()</td>
                    <td>@task.Status</td>
                    <td>
                        <a @onclick="@EditTask" class="btn btn-primary table-btn">
                            Edit
                        </a>
                        <StudiePlannerBlazor.Client.Components.EditComponent @ref="EditComponent"></StudiePlannerBlazor.Client.Components.EditComponent>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



<button @onclick="@AddTask" class="btn btn-dark table-btn quick-add-btn">&nbsp;&nbsp;+&nbsp;&nbsp;</button>

<StudiePlannerBlazor.Client.Components.AddComponent @ref="AddComponent"></StudiePlannerBlazor.Client.Components.AddComponent>



